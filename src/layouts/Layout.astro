---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Out of the Box Tours | Authentic Italian Experiences",
  description = "Discover Italy through the eyes of passionate locals. Unforgettable tours, authentic connections, unique adventures with local guides in Tuscany, Florence, and beyond."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Italy tours, local guides, Tuscany tours, Florence tours, authentic Italian experiences, wine tours, food tours, custom travel" />
    <meta name="author" content="Out of the Box Tours" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Out of the Box Tours" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>
